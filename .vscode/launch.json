{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "ucf101",
                "Lite",
                "--arch",
                "resnet50",
                "--num_segments",
                "8",
                "--gd",
                "20",
                "--lr",
                "0.01",
                "--lr_steps",
                "30",
                "--epochs",
                "5",
                "--batch-size",
                "1",
                "-i",
                "1",
                "-j",
                "8",
                "--dropout",
                "0.5",
            ],
            "console": "integratedTerminal"
        }
    ]
}